@using BandsMvc.Models;
@model Band
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css">
    <link rel="stylesheet" href="/css/MyCSS.css" />
</head>
<body>
    <h1>@Model.Name </h1>
    <h4>@Model.Description</h4>
    <img src="@Model.ImagePath" />
    <h4>Albums</h4>
    <ul>
    @foreach (var item in Model.Albums)
    {
        <li>@item</li>
    }
    </ul>

    <iframe width="560" height="315" src="@Model.YouTube" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>

  

</body>
</html>
